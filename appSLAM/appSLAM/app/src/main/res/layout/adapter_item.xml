<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/item.designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="désignation par défaut"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item.description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item.designation"
            android:text="description par défaut"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/item.prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item.description"
            android:layout_marginTop="0dp"
            android:text="prix par défault"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/item.id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item.prix"
            android:layout_marginTop="0dp"
            android:text="id par défaut"
            android:textSize="10dp" />
    </RelativeLayout>

</LinearLayout>